@model ChangeNameViewModel

@{
    ViewBag.Title = "SetName";
}

<h2>Set Name</h2>

<form method="post">
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(input => input.NameToBeChanged, "Set Name Of User")
        @Html.TextBoxFor(input => input.ChangedName, new { @class = "form-control", placeholder = "New Name Of User" })
        @Html.ValidationMessageFor(input => input.ChangedName)
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>