@model CreateEditProjectViewModel

@{
    ViewBag.Title = "EditAProject";
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Edit Project</h2>

<form method="post">
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(input => input.ProjectName, "Project Name")
        @Html.TextBoxFor(input => input.ProjectName, new { @class = "form-control", placeholder = "Name" })
        @Html.ValidationMessageFor(input => input.ProjectName)
    </div>

    <div class="form-group">
        @Html.LabelFor(input => input.ProjectDetails, "Project Details")
        @Html.TextAreaFor(input => input.ProjectDetails, new { @class = "form-control", placeholder = "Details" })
        @Html.ValidationMessageFor(input => input.ProjectDetails)
    </div>    
    <button type="submit" class="btn btn-default">Submit</button>
</form>