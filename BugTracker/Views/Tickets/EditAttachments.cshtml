@model EditAttachmentsViewModel

<h2>Attachments</h2>

@foreach (var file in Model.MediaUrls)
{
    <img class="img-responsive" src="@Url.Content(file)" />
    <form method="post" action="@Url.Action("DeleteAttachments", "Tickets", new { filename = file, ticketId = Model.TicketId })">
        <a href="#" class="btn-delete">Delete</a>
    </form>
}


<form method="post" action="@Url.Action("AddAttachments", "Tickets", new { ticketId = Model.TicketId })" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" name="Files" multiple required />
    </div>
    <a href="#" class="btn-delete">Add</a>
</form>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(function () {
        $(".btn-delete").on('click', function (e) {
            e.preventDefault();
            $(this).closest('form').submit();
        });
    });
</script>